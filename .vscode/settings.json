{
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "python.defaultInterpreterPath": "backend/venv/bin/python",
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  }
}