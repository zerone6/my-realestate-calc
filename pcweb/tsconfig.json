{
  "compilerOptions": {
  "types": ["node", "vite/client"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
  "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "../shared"]
}
